                        Margin="0,0,10,0"
                        Icon="{ui:SymbolIcon Edit48}"
                        Content="修改"
                        Command="{Binding EditConfigCommand}" />
                    <ui:Button
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        Icon="{ui:SymbolIcon Delete24}"
                        Content="删除"
                        Command="{Binding DeleteConfigCommand}" />
                    <ui:ToggleSwitch
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ToolTip="是否循环执行计划单"
                        Margin="0,0,5,0"
                        Command="{Binding  SetCycleTimeSwitchButtonCommand}"
                        IsChecked="{Binding Config.ScheduleLoop, Mode=TwoWay}"/>
                    
                   <Button
                        Grid.Column="5"
                        Visibility="{Binding Config.CycleMode, Converter={StaticResource BooleanToVisibilityRevertConverter}}"
                        FontFamily="{StaticResource TextThemeFontFamily}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Margin="0,0,10,0"
                        Command="{Binding SetCycleTimeButtonCommand}"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Padding="0"
                        ClickMode="Press">
                        <Viewbox>
                            <TextBlock Text="直接循环" TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                    <Button
                        Grid.Column="5"
                        Visibility="{Binding Config.CycleMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                        FontFamily="{StaticResource TextThemeFontFamily}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Margin="0,0,10,0"
                        Command="{Binding SetCycleTimeButtonCommand}"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Padding="0"
                        ClickMode="Press">
                        <Viewbox>
                            <TextBlock Text="定时循环" TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                    
                    

                </StackPanel>  
                
                <!-- 配置单列表 -->
                <Grid
                    Grid.Column="0"
                    Grid.Row="1"  
                    Grid.ColumnSpan="6"
                    Visibility="{Binding IsChecked, ElementName=PlanToggle, Converter={StaticResource BooleanToVisibilityConverter}}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    Margin="0,0,-10,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 列出配置单 -->
                    <ui:ListView
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.ColumnSpan="6"
                        VerticalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="0,0,15,0"
                        ItemsSource="{Binding FilteredConfigList, Mode=OneWay}"
                         SelectedItem="{Binding SelectedConfig, Mode=TwoWay}"
                        dd:DragDrop.IsDragSource="True"
                        dd:DragDrop.IsDropTarget="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"     
                        dd:DragDrop.UseDefaultDragAdorner="True"
                        dd:DragDrop.SelectDroppedItems="True">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <ui:Card
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Margin="0,-2,0,-5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!-- 序号 -->
                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Background="Transparent"
                                               Foreground="CornflowerBlue"
                                               FontFamily="{StaticResource TextThemeFontFamily}"
                                               FontSize="14"
                                               MaxWidth="20"
                                               MaxHeight="20"
                                               Text="{Binding IndexId ,Mode=OneWay}"
                                               Margin="5,0,10,0" />
                                    <!-- 配置单名称 -->
                                    <TextBlock Grid.Column="1"
                                               GotFocus="ConfigRow_GotFocus"
                                               HorizontalAlignment="Stretch"
                                               Background="Transparent"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Text="{Binding Name, Mode=OneWay}"
                                               Margin="0,0,3,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" /> <!-- 默认颜色设置为红色 -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NextConfiguration}" Value="True">
                                                        <Setter Property="Foreground" Value="DodgerBlue" /> <!-- NextConfiguration 为 True 时颜色设置为蓝色 -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    
                                    <!-- 计划表 -->
                                    <ComboBox Grid.Column="2"
                                              GotFocus="ConfigRow_GotFocus"
                                              VerticalAlignment="Center"
                                              Width="110"
                                              MaxWidth="110"
                                              VerticalContentAlignment="Center"
                                              Background="Transparent"
                                              Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                              Margin="0,0,5,0"
                                              ItemsSource="{Binding Config.ScheduleList, Mode=TwoWay}"
                                              SelectedItem="{Binding ScheduleName, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="12"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <!-- 执行周期 -->
                                    <ComboBox Grid.Column="3"
                                              GotFocus="ConfigRow_GotFocus"
                                              VerticalAlignment="Center"
                                              Width="75"
                                              MaxWidth="75"
                                              VerticalContentAlignment="Top"
                                              Background="Transparent"
                                              Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                              Margin="0,0,5,0"
                                              ItemsSource="{Binding SelectedPeriodList, Mode=OneWay}"
                                              SelectedItem="{Binding Period, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="12"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    
                                    <!-- 游戏UID -->
                                    <TextBox Grid.Column="4"
                                             GotFocus="ConfigRow_GotFocus"
                                             TextChanged="GenshinUid_TextChanged"
                                             Visibility="{Binding AccountBindingCode.IsEmpty, Converter={StaticResource BooleanToVisibilityRevertConverter}}"
                                               Width="70"
                                               MinWidth="70"
                                               MaxWidth="70"
                                               Background="Transparent"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="LightSkyBlue"
                                               FontSize="9"
                                               Text="{Binding GenshinUid,Mode=TwoWay}"
                                               Margin="0,0" />
                                    
                                    <TextBox Grid.Column="4"
                                             GotFocus="ConfigRow_GotFocus"
                                             TextChanged="GenshinUid_TextChanged"
                                             Visibility="{Binding AccountBindingCode.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Width="70"
                                             MinWidth="70"
                                             MaxWidth="70"
                                             Background="Transparent"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                             FontSize="9"
                                             Text="{Binding GenshinUid,Mode=TwoWay}"
                                             Margin="0,0" />
                                    
                                    
                                    <!-- 绑定状态 -->
                                    <CheckBox Grid.Column="5"
                                              GotFocus="ConfigRow_GotFocus"
                                              Checked="AccountBinding_Checked"
                                              Width="Auto"
                                              MaxWidth="50"
                                              Background="Transparent"
                                              Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding AccountBinding, Mode=TwoWay}"
                                              Margin="-6,0,-10,0" />
                                </Grid>
                            </ui:Card>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                        <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding SetNextConfigurationCommand}" Header="从此处开始执行计划表"/>
                            <MenuItem Command="{Binding ClearNextConfigurationCommand}" Header="清除从此处执行的标志"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ui:ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                            </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                             </Style>
                         </ui:ListView.ItemContainerStyle>
                     </ui:ListView>
                </Grid>
            </Grid>  
        </DockPanel>
    </Grid>
</UserControl>